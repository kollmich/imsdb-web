#perspective-scroll
    margin 0 auto
    margin-top 5%
    //background #333
    width 70%

#sections 
    background #fff
    width 25%
    padding-right 5%
    text-align justify
    vertical-align middle

#vis
    top 3rem //sticker-header = 3rem
    position sticky
    float right
    width 75%

.step p
    //margin-top 10rem    
    color $dark-gray
    text-align justify
    font-size 11px
    font-family $serif
    font-weight 200
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.axis
    opacity 0.7

.axis path
    stroke $gray-light

.axis line
    stroke $gray-light

.label
    font-family $serif
    fill $gray-dark
    font-size 11px
    
.tooltip, .callout
    font-family $serif
    fill $gray-dark
    font-size 12px
    text-anchor left
    font-weight 400
    text-align right

.tooltip, .callout tspan
    text-align right

.emissions circle
    position relative
    opacity 0.95
    
.emission .circ    
    fill $red

.new
    fill $blue

.old
    fill $red

.emission line
    position relative
    stroke $gray
    stroke-width 1px
    opacity 0.5
    stroke $dark-blue